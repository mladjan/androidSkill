# AI Configuration (OpenRouter or OpenAI)
# For OpenRouter: sk-or-v1-...
# For OpenAI: sk-...
OPENAI_API_KEY=sk-or-v1-your-key-here
OPENAI_BASE_URL=https://openrouter.ai/api/v1
# Recommended free model: meta-llama/llama-3.3-70b-instruct:free
# Other options: google/gemma-3-27b-it:free, openai/gpt-4o-mini
OPENAI_MODEL=meta-llama/llama-3.3-70b-instruct:free

# Bot Configuration
COMMENTS_PER_DAY=10
MIN_DELAY_MINUTES=30
MAX_DELAY_MINUTES=90

# Bot Behavior
SCROLL_TIME_MIN=10
SCROLL_TIME_MAX=30
TYPING_SPEED_WPM=60

# Security (auto-generated on first run)
ENCRYPTION_KEY=

# Logging
LOG_LEVEL=INFO
LOG_FILE=data/logs/bot.log

# Database
DATABASE_URL=sqlite:///data/database.db

# Browser
HEADLESS=true
